<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PUZMAGE Perfil</title>
    <%- include('../partials/head'); %>
        <link rel="stylesheet" href="css/profile.css">
</head>

<body>
    <%- include('../partials/navbar'); %>
    <div class="container">
        <div class="row">
            <div class="col-md-6"><br/>
                <div class="cmPerfilBox text-white">
                  <div class="cmPerfilIcon mb-2">
                    <i class="bi bi-person-circle"></i>
                  </div><h3>Usuario</h3>
                  <h5 class="cmPerfilEmail mb-0"><%= usu_email %></h5>
                </div>
              </div>
            <div class="col-md-6">
                <br/><h4 class="cmSectionTitle">Im√°genes</h4> <br/>
                <%if (typeof ok != "undefined" && ok) { %>
                  <h5 class="cmSectionTitleCantidad">  Cantidad de Imagenes: </h5>
                    <label  class="badge bg-white text-dark fs-5" for=""><%= uImages.length %></label>
                    <% for (var i = 0; i < uImages.length; i++) { %>
                        <div class="cmImageCard mb-4">
                          <img src="<%= uImages[i].img_content %>" alt="imagen" class="img-fluid cmUserImage">
                          <div class="row mt-3">
                            <div class="col-md-6 text-center">
                              <form action="/deleteImg" method="post">
                                <button class="btn btn-danger" name="img_id" value="<%= uImages[i].img_id %>">ELIMINAR</button>
                              </form>
                            </div>
                            <div class="col-md-6 text-center">
                              <form action="/playImg" method="post">
                                <button class="btn btn-success" name="pimg_id" value="<%= uImages[i].img_id %>">JUGAR</button>
                              </form>
                            </div>
                          </div>
                        </div>
                      <% } %>                      
                <% } %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <form action="/logout" method="post">
                    <button class="btn btn-warning">cerrar sesion</button>
                </form>
            </div>
        </div>
    </div>

    <script src="bootstrap/js/bootstrap.min.js"></script>
</body>

</html>